    .features#features-container

    script.
      const features = [
        {
          imgSrc: "https://storage.googleapis.com/a1aa/image/HAYbxbQHbXYZPxH88rRGIFMLIPJalGmScT9H9TeCn2VnfSpTA.jpg",
          alt: "Image showing a person working on a laptop",
          description: "Untuk pemula & profesional<br />Lebih dari 120.000+ pelanggan yang senang menggunakan kami. Gabungkan desain, kode, dan analitik dalam proyek Anda berikutnya. Anda juga harus mencobanya!"
        },
        {
          imgSrc: "https://storage.googleapis.com/a1aa/image/R1CkHybR86qGGFrwGZDR7mszUhgbbfuJQmXSwr5RhVeRflSnA.jpg",
          alt: "Image showing a frontend development illustration",
          description: "Bangun semuanya di frontend<br />Semua ide Anda siap menjadi kenyataan. Seret dan lepas elemen apa pun untuk membuat desain Anda tepat di bagian depan."
        },
        {
          imgSrc: "https://storage.googleapis.com/a1aa/image/aKRvAU4beVTIBi4TwBneuENnkSZAvHxlcuuG4Hqy2DPQflSnA.jpg",
          alt: "Image showing AI and IoT icons",
          description: "80+ kode pendek lengkap & kompleks<br />Pilih tema yang sempurna untuk setiap proyek Anda. Surat kabar memberi Anda 80+ kode pendek lengkap yang siap untuk disesuaikan!"
        }
      ];

      const container = document.getElementById('features-container');

      features.forEach(feature => {
        const featureItem = document.createElement('div');
        featureItem.classList.add('feature');

        const img = document.createElement('img');
        img.src = feature.imgSrc;
        img.alt = feature.alt;
        img.width = 200;
        img.height = 100;

        const p = document.createElement('p');
        p.innerHTML = feature.description;

        featureItem.appendChild(img);
        featureItem.appendChild(p);

        container.appendChild(featureItem);
      });
