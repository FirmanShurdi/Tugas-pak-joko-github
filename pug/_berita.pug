    script.
      const newsData = [
        {
          title: 'JEPANG PANIK BUYING',
          link: 'beritaa.html',
          imageSrc: 'https://i.ibb.co.com/rmzyyY5/Waswas-Warga-Jepang-Sampai-Panic-Buying-Karena-Peringatan-Gempa-Megaquake-1723609976.jpg',
