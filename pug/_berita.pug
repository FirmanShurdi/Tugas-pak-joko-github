          description: 'Insiden ini terjadi saat Tim baru menyanyikan dua lagu, saat mempersembahkan lagu "Blue Giant". Tim bergegas perlahan ke belakang panggung.'
        },
        {
          title: 'ISRAEL GEMPUR TEPI BARAT',
          link: 'beritaa.html',
          imageSrc: 'https://i.ibb.co.com/SRqXDvR/download-2.jpg',
          altText: 'Image of a street in Palestine with damaged buildings',
          description: 'Berhasil meluncurkan operasi militer besar-besaran sejak infeksi pada 2024, dan Zef Nazarik bersama pasukannya pada tahun (2024) dari barat.'
        }
      ];

      function each(array, callback) {
        for (let i = 0; i < array.length; i++) callback(array[i], i);
      }

      const newsGrid = document.getElementById('newsGrid');
      each(newsData, function (news) {
        const newsItem = `
          <div class="news-item">
            <a href="${news.link}">
              <img src="${news.imageSrc}" alt="${news.altText}" height="200" width="250"/>
              <h2>${news.title}</h2>
            </a>
            <p>${news.description}</p>
          </div>
        `;
        newsGrid.innerHTML += newsItem;
      });