doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title FAQ Section
    link(rel="stylesheet" href="FAQ.css")
  
  body
    header
      .header-content
        .marquee
          p PensNews merupakan sebuah website yang menyediakan sebuah berita hangat dan menarik yang terdapat didalam negeri maupun diluar negeri

    .breadcrumbs
      .breadcrumb-item
        a(href="#") About Us >
      .breadcrumb-item
        a(href="#") FAQ

    .faq-container
      .faq-header
        img.faq-icon(src="https://i.ibb.co.com/TgCHsHc/org.png" alt="FAQ Icon")
        h2 FAQ

    //- FAQ items will be inserted here by JavaScript

    .faq-footer
      a(href="Redaksi.html")
        img.footer-icon(src="https://i.ibb.co.com/VJ8QJY3/download-3-removebg-preview.png" alt="Footer Icon")

    script.
      const faqData = [
        { question: "FAQ 1", answers: ["Answer line 1", "Answer line 2", "Answer line 3"] },
        { question: "FAQ 2", answers: ["Answer line 1", "Answer line 2", "Answer line 3"] },
        { question: "FAQ 3", answers: ["Answer line 1", "Answer line 2", "Answer line 3"] }
      ];

      const faqContainer = document.querySelector('.faq-container');

      faqData.forEach(faq => {
        // Create FAQ item
        const faqItem = document.createElement('div');
        faqItem.className = 'faq-item';
        faqItem.textContent = faq.question;

        const toggleIcon = document.createElement('span');
        toggleIcon.textContent = '+';
        faqItem.appendChild(toggleIcon);

        faqItem.onclick = () => {
          faqContent.style.display = faqContent.style.display === 'block' ? 'none' : 'block';
        };

        // Create FAQ content
        const faqContent = document.createElement('div');
        faqContent.className = 'faq-content';
        faqContent.style.display = 'none';

        faq.answers.forEach(answer => {
          const answerParagraph = document.createElement('p');
          answerParagraph.textContent = answer;
          faqContent.appendChild(answerParagraph);
        });

        // Append to container
        faqContainer.appendChild(faqItem);
        faqContainer.appendChild(faqContent);
      });
